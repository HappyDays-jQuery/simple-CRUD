{
  "name": "simple-crud",
  "description": "Slim3を使用した簡単なCRUDサンプル。最低限の開発環境およびセキュリティ対策を入れておく。",
  "keywords": [
    "microframework",
    "rest",
    "router",
    "psr7"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "HappyDays-jQuery",
      "email": "developer@jquery.tokyo",
      "homepage": "http://jquery.tokyo/"
    }
  ],
  "require": {
    "php": ">=7.1.0",
    "slim/slim": "^3.1",
    "slim/php-view": "^2.0",
    "monolog/monolog": "^1.17",
    "ext-pdo": "*",
    "slim/csrf": "^0.8.3",
    "vlucas/phpdotenv": "^3.3"
  },
  "require-dev": {
    "phpunit/phpunit": ">=4.8 < 6.0"
  },
  "autoload": {
    "psr-4": {
      "Classes\\": "src/classes/"
    },
    "files": [
      "src/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "process-timeout": 0
  },
  "scripts": {
    "start": "php -S localhost:8080 -t public",
    "test": "phpunit"
  }
}
